{
  "extends": [
    "stylelint-config-standard",
    "stylelint-config-recommended",
    "stylelint-prettier/recommended"
  ],
  "plugins": ["stylelint-scss"],
  "rules": {
    "prettier/prettier": true,
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "tailwind",
          "apply",
          "variants",
          "responsive",
          "screen",
          "layer"
        ]
      }
    ]
  }
}
